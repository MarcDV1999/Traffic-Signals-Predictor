function colorFeatures = getColorFeatures(im)
    nClusters = 3;
    H1 = fspecial("average", [2 2]);
    im_filtered = imfilter(im, H1); 
    [cluster_color, cluster_ratio, cluster_labels] = image2palette(nClusters, im_filtered, fname);
    %cluster_color(1,2)
   
    % Creem un vector que per cada color tindrem 2 caracteristiques
    colorFeatures = zeros(1, 2*nClusters);
    for i = 0:length(cluster_color)
        
end

